{
  "name": "DF-New Level Upload API",
  "type": "client-side",
  "host": "GitHub Pages",
  "storage": "Firebase Realtime Database REST API",
  "level_read_contract": {
    "list_ids": "/levels.json?shallow=true",
    "fetch_level_data": "/levels/<id>/data.json"
  },
  "level_write_contract": {
    "put_level_object": "/levels/<id>.json",
    "id_format": "username-levelname",
    "required_fields": [
      "data",
      "name",
      "owner",
      "level_id",
      "uploaded_at"
    ]
  },
  "account_contract": {
    "account_field": "owner",
    "username_source": "accountUsername UI field (fallback: author)",
    "auth": "Firebase auth token via ?auth=<token>"
  },
  "notes": [
    "This is a static web client, not a server runtime.",
    "Database auth depends on your Firebase rules; pass token via UI if required.",
    "Uploaded level IDs are generated as username-levelname.",
    "Account manager page: /account-manager.html"
  ]
}
